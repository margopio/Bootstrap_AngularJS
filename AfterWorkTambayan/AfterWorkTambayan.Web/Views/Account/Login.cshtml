@model AfterWorkTambayan.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}


<div class="span8 offset4 well">
	<legend>Please Sign In</legend>    
	@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
        @Html.AntiForgeryToken()

        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Any())
        { 
            <div class="alert alert-error">                
                @Html.ValidationSummary(true)
            </div>
        } 
        
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Username" })@Html.ValidationMessageFor(m => m.UserName)
		<br />	
        @Html.TextBoxFor(m => m.Password, new { placeholder = "Password" })@Html.ValidationMessageFor(m => m.Password)  
        <br />
        <label class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)Remember Me
        </label>
		<button type="submit" name="submit" class="btn btn-info btn-block">Sign in</button>
		<p>
            @Html.ActionLink("Register", "Register") if you don't have an account.
        </p>
 }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
