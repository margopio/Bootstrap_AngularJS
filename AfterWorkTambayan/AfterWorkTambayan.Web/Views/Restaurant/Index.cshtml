@model IEnumerable<AfterWorkTambayan.Web.Model.ListRestaurantsViewModel>

@{
    ViewBag.Title = "Restaurant Index Page";
}

<div id="restaurant" class="span3" style="padding-right: 40px">
    <ul class="nav nav-list">
        <li class="nav-header"><i class="icon-home"></i>&nbsp;Restaurant</li>
        @{
            if (Model.Any()) {
                <li class="active"><a href="#" data-category="listRestaurant" data-id="@Model.First().Id">@Model.First().Name</a></li>
            }
            int i = 0;
            foreach (var item in Model) {
                if (i++ > 0) {                
                    <li><a href="#" data-category="listRestaurant" data-id="@item.Id">@item.Name</a></li>  
                }         
            }
        }
        <li class="divider"></li>
        <li class="nav-header"><i class="icon-book"></i>&nbsp;Menu Category</li>
        <li><a href="#" data-category="menuAdmin">Menu Administration</a></li>
        <li class="divider"></li>
        <li class="nav-header"><i class="icon-user"></i>&nbsp;Employer Setup</li>
        <li class="divider"></li>
        <li class="nav-header"><i class="icon-plus-sign"></i>&nbsp;New Restaurant</li>
        <li><a href="#" data-category="addRestaurant">Add Restaurant</a></li>
        <li class="divider"></li>
        <li>
            <a id="example" href="#" rel="popover">What's this?</a>
        </li>
    </ul>
</div>
<br />
<div id="divResult" class="span9">
    @*@{
        if (Model.Any()) {
            @Html.Action("GetRestaurant", new { id = @Model.First().Id })
        }
    }*@
</div>

@section Scripts {   
    @*@Scripts.Render("~/bundles/jqueryval") *@    
    <script src="@Url.Content("~/Scripts/Restaurant.js")" type="text/javascript"></script>    
}
