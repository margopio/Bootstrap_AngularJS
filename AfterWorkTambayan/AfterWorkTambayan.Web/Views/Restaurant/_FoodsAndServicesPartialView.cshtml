<div class="row well" style="margin-left: 0px">
    <div class="span5">
        <div class="row" style="margin-left: 0px">
            <p style="text-align: center">
                <strong>{{data.foods.length}}</strong><em> Types of Food Found</em>           
            </p>            
            <table id="typesOfFoodTable" class="table table-striped table-bordered">
                <tr>
                    <td style="text-align:left; vertical-align:middle; width: 80%">                        
                        <input type="text" id="inputSearch" class="input-medium search-query" placeholder="Enter type of food to search" style="width: 100%; margin-bottom: 0;" ng-model="searchText"/>                        
                    </td>
                    <td style="border-left: 0; vertical-align:middle; width: 20%">
                        <i class="icon-backward icon-black" ng-click="cancelSearchMode()"></i>
                    </td>
                </tr>
                <tr ng-repeat="food in data.foods | filter: searchText | orderBy:'type'">
                    <td style="text-align:left; vertical-align:middle; border-right: 0; width: 80%" ng-style="set_color(food)">
                        <span ng-show="food.editMode == null || food.editMode == false"><a href="#" ng-click="selectFoodType(food)">{{food.type}}</a></span>
                        <input ng-model="food.type" ng-show="food.editMode == true" />                        
                    </td>
                    <td style="text-align:center; vertical-align:middle; border-left: 0; width: 20%">
                        <div ng-show="food.editMode == null || food.editMode == false">                            
                                <i class="icon-edit icon-black" ng-click="toggleEditMode(food)"></i>&nbsp;
                                <i class="icon-trash icon-black" ng-click="deleteFoodType(food)"></i>
                        </div>
                        <div ng-show="food.editMode == true">                            
                                <i class="icon-file icon-black" ng-click="updateFoodType(food)"></i>&nbsp;
                                <i class="icon-backward icon-black" ng-click="cancelEditMode(food)"></i>
                        </div>                        
                    </td>                    
                </tr>
                <tr>
                    <td colspan="2" style="text-align:left; vertical-align:middle">
                        <input type="text" id="inputAdd" class="input-medium search-query" placeholder="Enter type of food to add" style="width: 80%; margin-bottom: 0;" ng-model="addText"/>
                        <button id="buttonAdd" class="btn btn-warning" type="button" ng-click="addNewItem(addText)">Add</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="span7">
        <div class="row" style="margin-left: 5px">
            <p style="text-align: center">
                <em>Available Services for </em><strong>{{data.selectedAvailable.foodType}}</strong>
            </p>  
            <table id="availableServicesTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="text-align: center">Services</th>
                        <th style="text-align: center">Active</th>
                        <th style="text-align: center">Test</th>
                        <th style="text-align: center">Public</th>
                        <th style="text-align: center">Internal</th>
                    </tr>
                </thead>
                    <tbody>
                        <tr ng-repeat="item in data.selectedAvailable.availableServices">
                            <td style="vertical-align:middle">
                                {{item.service}}
                            </td>
                            <td>
                                <div class="btn-toolbar pagination-centered">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveYes(item, 'action')" ng-click="editActiveYes(item, 'action')">Yes</button>
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveNo(item, 'action')" ng-click="editActiveNo(item, 'action')">No</button>
                                    </div>
                                </div>
                            </td>
                            <td>                                
                                <div class="btn-toolbar pagination-centered">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveYes(item, 'test')" ng-click="editActiveYes(item, 'test')">Yes</button>
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveNo(item, 'test')" ng-click="editActiveNo(item, 'test')">No</button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="btn-toolbar pagination-centered">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveYes(item, 'public')" ng-click="editActiveYes(item, 'public')">Yes</button>
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveNo(item, 'public')" ng-click="editActiveNo(item, 'public')">No</button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="btn-toolbar pagination-centered">
                                    <div class="btn-group" data-toggle="buttons-radio">
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveYes(item, 'internal')" ng-click="editActiveYes(item, 'internal')">Yes</button>
                                        <button type="button" class="btn btn-mini btn-info" ng-class="getActiveNo(item, 'internal')" ng-click="editActiveNo(item, 'internal')">No</button>
                                    </div>
                                </div>
                            </td>
                        </tr>                       
                    </tbody>
            </table>
        </div>
    </div>
</div>
