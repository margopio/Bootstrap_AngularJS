@model AfterWorkTambayan.Web.Models.GetArticleViewModel

@{
    ViewBag.Title = "Article GetArticle Page";    
}

@section Style
{
    <style type="text/css">       
        #outercontainer { position: relative; width: 100%; height: 400px; }
        #innercontainer { position: absolute; top: 30%; left: 20%; width: 70%; height: 100%; } 
        .image div {
            font-size: 80%;
            font-family: Verdana, Arial, sans-serif;
            text-align: center; 
        }   
    </style>
}

<div id="article" class="span3" style="padding-right: 40px">
    <ul class="nav nav-list">
        <li class="nav-header"><i class="icon-home"></i>&nbsp;Article</li>        
    </ul>
</div>
<div id="divResult" class="span9">    

    <div class="row">
        <h2>@Model.Article.Title</h2>
        <p><i>@Model.Article.DateAdded, @Model.Article.AddedBy</i></p>
    </div>
    <div class="row">        
        @*<img class="img-responsive" style="padding-left: 10px;" border="0" align="right" src="@Model.Article.ImageUrl" alt="Image Source"/>*@

        <div class="image" style="float: right; margin-left: 0.5em">
            <img class="img-responsive" border="0" src="@Model.Article.ImageUrl" alt="Image Source"/>
            <div>This is going to be a very long <br />caption text plus more blah blah blah</div>
        </div>

        <strong>@Model.Article.Body</strong>        
    </div>
</div>

<br clear="all" />

@section Scripts {  
    <script src="@Url.Content("~/Scripts/bootbox.min.js")" type="text/javascript"></script>        
    
}
