@model AfterWorkTambayan.Web.Models.GetArticleViewModel

@{
    ViewBag.Title = "Article GetArticle Page";    
}

@section Style
{
    <style type="text/css">       
        #outercontainer { position: relative; width: 100%; height: 400px; }
        #innercontainer { position: absolute; top: 30%; left: 20%; width: 70%; height: 100%; } 
        .image div {
            font-size: 80%;
            font-family: Verdana, Arial, sans-serif;
            text-align: center; 
        }   
    </style>
}

<div id="article" class="span3" style="padding-right: 40px">
    <ul class="nav nav-list">
        <li class="nav-header"><i class="icon-home"></i>&nbsp;Article</li>        
    </ul>
</div>
<div id="divResult" class="span9">  

    <div class="row">  
        <div class="span12">  
            <ul class="breadcrumb">  
                <li>  
                    <a href="#">Home</a> <span class="divider">></span>  
                </li>  
                <li>  
                    <a href="#">Information</a> <span class="divider">></span>  
                </li>  
                <li>  
                    <a href="/Article">News and Advisories</a> <span class="divider">></span>  
                </li> 
                <li class="active">Article Title</li>  
            </ul>  
        </div>  
    </div>   

    @*<div class="row">
        <h2>@Model.Article.Title</h2>
        <p><i>@Model.Article.DateAdded, @Model.Article.AddedBy</i></p>
    </div>*@
    <br />
    <div class="row">        
        @*<img class="img-responsive" style="padding-left: 10px;" border="0" align="right" src="@Model.Article.ImageUrl" alt="Image Source"/>*@

        <div class="image" style="float: right; margin-left: 1.0em">
            <img class="img-responsive" border="0" src="@Model.Article.ImageUrl" alt="Image Source" height="200" width="200"/>
            <div>@Model.Article.Caption</div>
        </div>
        <h2>@Model.Article.Title</h2>
        <p><i>@Model.Article.DateAdded, @Model.Article.AddedBy</i></p>
        <p><strong>@Html.Raw(HttpUtility.HtmlEncode(@Model.Article.Body).Replace("\n", "<br/>"))</strong></p>
    </div>
</div>

<br clear="all" />

@section Scripts {  
    <script src="@Url.Content("~/Scripts/bootbox.min.js")" type="text/javascript"></script>        
    
}
