@model AfterWorkTambayan.Web.Models.ListArticlesViewModel

@{
    ViewBag.Title = "Article Index Page";    
}

@section Style
{
    <style type="text/css">       
        #outercontainer { position: relative; width: 100%; height: 400px; }
        #innercontainer { position: absolute; top: 30%; left: 20%; width: 70%; height: 100%; }    
    </style>
}

<div id="article" class="span3" style="padding-right: 40px">
    <ul class="nav nav-list">
        <li class="nav-header"><i class="icon-home"></i>&nbsp;Article</li>        
    </ul>
</div>
<div id="divResult" class="span9">

        <div class="row">  
            <div class="span12">  
                <ul class="breadcrumb">  
                  <li>  
                    <a href="#">Home</a> <span class="divider">></span>  
                  </li>  
                  <li>  
                    <a href="#">Information</a> <span class="divider">></span>  
                  </li>  
                  <li class="active">News and Advisories</li>  
                </ul>  
            </div>  
        </div> 
    
        <div class="row">
            <div class="span12">
                <h2>News and Advisories
                    <small>Showcase What You Have One Article at a Time</small>
                </h2>
            </div>
        </div>

        <div class="row  pull-right">
            <div class="span12">
                <i class="icon-pencil"></i>&nbsp;<a href="/Article/AddArticle">Create</a>&nbsp;&nbsp;
                <i class="icon-home"></i>&nbsp;&nbsp;<a href="/Article">Back to Home</a>
            </div>
        </div>

        <br clear="all" /><br />
        
        @foreach (var item in Model.Articles)
        {
            @Html.Partial("_ListArticlePartialView", item)
        }        
        
        <div class="row  pull-right">
            <div class="span12">
                <ul class="pagination">
                    <li><a href="#">&laquo;</a>
                    </li>
                    <li class="active"><a href="#">1</a>
                    </li>
                    <li><a href="#">2</a>
                    </li>
                    <li><a href="#">3</a>
                    </li>
                    <li><a href="#">4</a>
                    </li>
                    <li><a href="#">5</a>
                    </li>
                    <li><a href="#">&raquo;</a>
                    </li>
                </ul>
            </div>
        </div>
        
</div>

<br clear="all" />

@section Scripts {  
    <script src="@Url.Content("~/Scripts/bootbox.min.js")" type="text/javascript"></script>        
    
}
